            bindings = <
        &trans        &trans        &trans        &kp UNDER        &kp LEFT_BRACKET    &kp RIGHT_BRACKET  &kp KP_EQUAL      &trans     &trans  &trans
        &kp NUMBER_1  &kp NUMBER_2  &kp NUMBER_3  &kp NUMBER_4     &kp N5              &kp NUMBER_6       &kp N7            &kp N8     &kp N9  &kp N0
&trans  &trans        &trans        &kp ENTER     &kp KP_SUBTRACT  &kp LEFT_BRACE      &kp RIGHT_BRACE    &kp PLUS          &kp TILDE  &trans  &kp GRAVE  &trans
                                    &trans        &trans           &trans              &kp DOUBLE_QUOTES  &kp SINGLE_QUOTE  &trans
            >;

            label = "NUM";
        };

        nav_layer {
            bindings = <
        &trans  &trans  &trans  &trans  &trans    &kp HOME  &kp PAGE_DOWN  &kp PAGE_UP   &kp END    &trans
        &trans  &trans  &trans  &trans  &trans    &kp LEFT  &kp DOWN       &kp UP_ARROW  &kp RIGHT  &trans
&trans  &trans  &trans  &trans  &trans  &trans    &trans    &trans         &trans        &trans     &trans  &trans
                        &trans  &trans  &trans    &trans    &trans         &trans
            >;

            label = "NAV";
        };

        gaming_layer {
            bindings = <
       &kp TAB           &kp Q  &kp W  &kp E    &kp R        &trans  &trans  &trans  &trans  &trans
       &kp LEFT_SHIFT    &kp A  &kp S  &kp D    &kp F        &trans  &trans  &trans  &trans  &trans
&to 0  &kp LEFT_CONTROL  &kp Z  &kp X  &kp C    &kp V        &trans  &trans  &trans  &trans  &trans  &trans
                                &mo 4  &kp ESC  &kp SPACE    &trans  &trans  &trans
            >;

